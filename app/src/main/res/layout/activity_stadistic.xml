<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:padding="16dp"
    tools:context=".Activity_Stadistic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TÍTULO DE LA PANTALLA -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Estadísticas de Gastos"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- SECCIÓN 1: GRÁFICO VISUAL (Circular/Barras) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gráfico de Gastos Mensuales"
                android:textColor="#333333"
                android:textStyle="bold" />

            <!-- Aquí se insertará el gráfico (ej. PieChart o BarChart de una librería) -->
            <FrameLayout
                android:id="@+id/chart_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="8dp">

                <!-- Placeholder para el gráfico. En la Activity se añadiría el objeto gráfico aquí. -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="[Espacio para Gráfico de Barras o Circular]"
                    android:textColor="#AAAAAA"
                    android:textSize="16sp" />
            </FrameLayout>

        </LinearLayout>

        <!-- SECCIÓN 2: PROMEDIO DIARIO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promedio de Gasto Diario (Mes):"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_daily_average"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="#2196F3"
                android:textSize="18sp"
                tools:text="$ 45.25" />

        </LinearLayout>

        <!-- SECCIÓN 3: GASTOS POR CATEGORÍA (con porcentajes) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Desglose por Categoría"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Contenedor para la lista de categorías (usaremos un LinearLayout
                 simple o RecyclerView, aquí se usa LinearLayout como ejemplo de slot) -->
            <!-- Contenedor de la Lista de Categorías: CORREGIDO para usar RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_list_container"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_category_summary" />

        </LinearLayout>

        <!-- SECCIÓN 4: Botón o elemento para seleccionar el mes/filtro (opcional, pero útil) -->
        <Button
            android:id="@+id/btn_select_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#607D8B"
            android:onClick="cmdSetting_onClick"
            android:text="Cambiar Mes de Análisis"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>